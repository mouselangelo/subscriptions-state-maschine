{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "allowJs": false,
    "target": "ES2019",
    "lib": ["ES2019"],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@root/*": ["src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true
  },
  "include": ["./src", "./__mongo-test-db__", "config.*.json"],
  "exclude": ["node_modules"]
}
